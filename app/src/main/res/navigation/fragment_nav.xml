<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.wallpapers.fragments.MainFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_showImageFragment"
            app:destination="@id/showImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/pageFragment"
        android:name="com.example.wallpapers.fragments.PageFragment"
        android:label="fragment_page"
        tools:layout="@layout/fragment_page" />
    <fragment
        android:id="@+id/headerFragment"
        android:name="com.example.wallpapers.fragments.HeaderFragment"
        android:label="fragment_header"
        tools:layout="@layout/fragment_header" />
    <fragment
        android:id="@+id/showImageFragment"
        android:name="com.example.wallpapers.fragments.ShowImageFragment"
        android:label="fragment_show_image"
        tools:layout="@layout/fragment_show_image" />
</navigation>